<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context="bitcoin.watch.alexandertekle.blockchainpractice.MainActivity">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:context="com.sample.foo.simplewebapi.MainActivity"
            tools:layout_constraintBottom_creator="1"
            tools:layout_constraintLeft_creator="1"
            tools:layout_constraintRight_creator="1"
            tools:layout_constraintTop_creator="1"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/current"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Price"
                    android:gravity="center"
                    android:textSize="35dp"
                    android:layout_marginRight="-55dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="#fff"

                    />

                <TextView
                    android:id="@+id/percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Perc."
                    android:textSize="35dp"
                    android:layout_marginLeft="-55dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp"
                    android:textColor="#fff"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="1.0">
                >

                <LinearLayout
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_weight=".5"
                    android:layout_width="0dip">

                    <TextView
                        android:id="@+id/difference"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Difference"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="#fff"
                        />

                    <TextView
                        android:id="@+id/volume"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="24h Volume"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="#fff"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_weight=".5"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:weightSum="1.0">
                    >

                    <TextView
                        android:id="@+id/high"
                        android:layout_width="match_parent"
                        android:text="High"
                        android:layout_weight=".5"
                        android:layout_height="0dip"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="#fff"

                        />

                    <TextView
                        android:id="@+id/low"
                        android:layout_width="match_parent"
                        android:text="Low"
                        android:layout_weight=".5"
                        android:layout_height="0dip"
                        android:textSize="20dp"
                        android:gravity="center"
                        android:textColor="#fff"

                        />
                </LinearLayout>
            </LinearLayout>

            <!--
            <TextView
                android:id="@+id/sourcesView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Sources" />-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp">

                <Button
                    android:id="@+id/oneday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1D"
                    android:background="@android:color/transparent"
                    android:textColor="#00bfff"/>

                <Button
                    android:id="@+id/oneweek"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1W"
                    android:textColor="#fff"
                    android:background="@android:color/transparent"/>

                <Button
                    android:id="@+id/onemonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1M"
                    android:textColor="#fff"
                    android:background="@android:color/transparent"/>

                <Button
                    android:id="@+id/threemonths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="3M"
                    android:textColor="#fff"
                    android:background="@android:color/transparent"/>

                <Button
                    android:id="@+id/sixmonths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="6M"
                    android:textColor="#fff"
                    android:background="@android:color/transparent"/>

                <Button
                    android:id="@+id/oneyear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="1Y"
                    android:textColor="#fff"
                    android:background="@android:color/transparent"/>


            </LinearLayout>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="fill_parent"
                android:layout_height="250dp"
                android:layout_weight="1.25"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp"
                />
            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/volchart"
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:layout_weight="1.25"
                tools:layout_editor_absoluteX="8dp"
                tools:layout_editor_absoluteY="8dp" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
